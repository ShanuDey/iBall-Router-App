<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:layout_width="match_parent"
        android:id="@+id/switch_enableBandwidthControl"
        android:text="Enable Bandwidth Control"
        android:padding="20sp"
        android:layout_height="wrap_content"/>

    <com.alespero.expandablecardview.ExpandableCardView
        android:id="@+id/wan_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:title="Wan Status"
        app:inner_view="@layout/wan_status"
        app:expandOnClick="true"
        app:animationDuration="300"
        app:startExpanded="false"/>

    <com.alespero.expandablecardview.ExpandableCardView
        android:id="@+id/system_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:title="System Status"
        app:inner_view="@layout/system_status"
        app:expandOnClick="true"
        app:animationDuration="300"
        app:startExpanded="false"/>

</LinearLayout>