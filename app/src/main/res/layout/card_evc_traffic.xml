<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:text="Uplink Rate (KB/s)" />

        <TextView
            android:id="@+id/tv_uplink"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:text="Downlink Rate (KB/s)" />

        <TextView
            android:id="@+id/tv_downlink"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:text="Sent Message" />

        <TextView
            android:id="@+id/tv_sentMessage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:text="Sent Bytes (MB)" />

        <TextView
            android:id="@+id/tv_sentBytes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:text="Received Message" />

        <TextView
            android:id="@+id/tv_receivedMessage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:text="Received Bytes (MB)" />

        <TextView
            android:id="@+id/tv_receivedBytes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textAlignment="center" />

    </LinearLayout>
</LinearLayout>